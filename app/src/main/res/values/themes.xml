<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DermDetect" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:popupBackground">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="background">
        <item name="android:background">@drawable/gradiente_blue</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="toolbar">
        <item name="android:background">@color/toolbar_blue</item>
    </style>

    <!-- Settings Activity -->
    <style name="perfil">
        <item name="android:backgroundTint">@color/toolbar_blue</item>
    </style>


    <style name="button">
        <item name="android:backgroundTint">@color/toolbar_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/black</item>
    </style>


    <style name="ic_menu">
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="ic_delete">
        <item name="android:src">@drawable/ic_delete_light</item>
    </style>

    <style name="icons">
        <item name="tint">@color/black</item>
    </style>


    <!-- Informations Activity -->
    <style name="description_drawable">
        <item name="android:drawableStart">@drawable/ic_description_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="symptons_drawable">
        <item name="android:drawableStart">@drawable/ic_symptons_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="treatment_drawable">
        <item name="android:drawableStart">@drawable/ic_treatment_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.DermDetect" parent="Base.Theme.DermDetect" />
</resources>