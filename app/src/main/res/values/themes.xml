<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DermDetect" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:popupBackground">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="background">
        <item name="android:background">@color/terc_blue</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="toolbar">
        <item name="android:background">@color/primary_blue</item>
    </style>


    <!-- Auth Activities -->

    <style name="ic_person">
        <item name="android:tint">#000000</item>
    </style>

    <!-- Settings Activity -->

    <style name="edit_perfil">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="report">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="night_mode">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="privacy">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="help">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="sign_out">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>


    <style name="button">
        <item name="android:backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="cardview">
        <item name="android:backgroundTint">@color/primary_blue</item>
    </style>

    <style name="image_cardview">
        <item name="android:src">@drawable/ic_imageempty</item>
    </style>


    <style name="ic_menu">
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="ic_delete">
        <item name="android:src">@drawable/ic_delete_light</item>
    </style>

    <style name="icons">
        <item name="tint">@color/black</item>
    </style>


    <!-- Informations Activity -->
    <style name="description_drawable">
        <item name="android:drawableStart">@drawable/ic_description_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="symptons_drawable">
        <item name="android:drawableStart">@drawable/ic_symptons_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="treatment_drawable">
        <item name="android:drawableStart">@drawable/ic_treatment_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.DermDetect" parent="Base.Theme.DermDetect" />
</resources>